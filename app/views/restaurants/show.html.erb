<h1><%= @restaurant.name %> <small>(<%= @restaurant.category %>)</small></h1>
<ul>
  <li>Address: <%= @restaurant.address %></li>
  <li>Phone Number: <%= @restaurant.phone_number %></li>

</ul>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
      <%= link_to "Remove review",
                  review_path(review),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>



<%= link_to "Edit #{@restaurant.name}", edit_restaurant_path(@restaurant) %>
<br>
<%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are your sure?"} %>
<br>
<%= link_to "Back to all restaurants", restaurants_path %>
<br>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
